{
  "name": "token_sale_assignment",
  "version": "0.0.1",
  "description": "ERC1363 Token Sale with a Linear Bonding Curve",
  "scripts": {
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js": "prettier --loglevel warn --ignore-path .gitignore '**/*.{js,ts}' --check && eslint --ignore-path .gitignore .",
    "lint:js:fix": "prettier --loglevel warn --ignore-path .gitignore '**/*.{js,ts}' --write && eslint --ignore-path .gitignore . --fix",
    "lint:sol": "prettier --loglevel warn --ignore-path .gitignore '{contracts,test}/**/*.sol' --check && solhint '{contracts,test}/**/*.sol'",
    "lint:sol:fix": "prettier --loglevel warn --ignore-path .gitignore '{contracts,test}/**/*.sol' --write && solhint '{contracts,test}/**/*.sol'"
  },
  "keywords": [
    "bundingcurve",
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "token",
    "erc1363"
  ],
  "author": "Milad (https://github.com/MehdizadeMilad)",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.2",
    "@openzeppelin/hardhat-upgrades": "^2.0.1",
    "@openzeppelin/test-helpers": "^0.5.16",
    "chai": "^4.3.7",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "ethereum-waffle": "^4.0.10",
    "hardhat": "^2.17.0",
    "hardhat-waffle": "^0.0.1-security",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.4"
  },
  "dependencies": {
    "erc-payable-token": "^4.9.2",
    "ethers": "^6.6.4"
  }
}